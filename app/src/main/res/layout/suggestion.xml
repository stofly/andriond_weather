<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/mall_header_lin_bg">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="生活指数"
            android:textColor="#fff"
            android:textSize="20sp"/>

    <LinearLayout
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginLeft="10sp"
                android:layout_width="32sp"
                android:layout_gravity="center"
                android:layout_height="32sp"
                android:src="@drawable/cloth"
        />
        <!--穿着指数-->
        <TextView
                android:id="@+id/dressing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="#fff"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginLeft="10sp"
                android:layout_width="32sp"
                android:layout_gravity="center"
                android:layout_height="32sp"
                android:src="@drawable/sport"
        />
        <!--晨练指数-->
        <TextView
                android:id="@+id/exercise_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="#fff"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginLeft="10sp"
                android:layout_width="32sp"
                android:layout_gravity="center"
                android:layout_height="32sp"
                android:src="@drawable/wash"
        />
        <!--洗车指数-->
        <TextView
                android:id="@+id/wash_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="#fff"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginLeft="10sp"
                android:layout_width="32sp"
                android:layout_gravity="center"
                android:layout_height="32sp"
                android:src="@drawable/tra"
        />
        <!--旅行指数-->
        <TextView
                android:id="@+id/travel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>
