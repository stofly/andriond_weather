<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:orientation="vertical"
                android:layout_margin="15sp"
                android:background="@drawable/mall_header_rel_bg">

    <TextView
            android:id="@+id/cityMgName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="杭州"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"/>


    <!--天气状况-->
    <TextView
            android:id="@+id/cityMgweather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="多云转晴"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="98dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" android:layout_marginRight="98dp"/>
    <!--温度状况-->
    <TextView
            android:id="@+id/cityMgtemperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="25℃"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="87dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="87dp"/>

    <Button
            android:id="@+id/discr_btn"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@drawable/discr"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="59dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="59dp"/>


    <Button
            android:id="@+id/updata_btn"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@drawable/dele"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>

</RelativeLayout>